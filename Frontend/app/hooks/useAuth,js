import { useEffect, useState } from "react";
import axios from "axios";
import { useRouter } from "next/router";

const useAuth = () => {
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  const [isLoading, setIsLoading] = useState(true);
  const router = useRouter();

  useEffect(() => {
    const checkCredentials = () => {
      const accessToken = localStorage.getItem("accessToken");
      const apiToken = localStorage.getItem("apiToken");

      // Check if both tokens exist
      if (accessToken && apiToken) {
        setIsAuthenticated(true);
      } else {
        setIsAuthenticated(false);
        router.push("/auth");
      }
      setIsLoading(false); // Moved this here to ensure it's set after the checks
    };

    checkCredentials();
  }, [router]);

  const login = async (userData) => {
    try {
      // Use the API URL from the environment variable
      const response = await axios.post(`${process.env.NEXT_PUBLIC_AGICOOO_CREATE_ACCOUNT_API_URL}`, userData);
      const { accessToken, apiToken } = response.data;

      // Save tokens to localStorage
      localStorage.setItem("accessToken", accessToken);
      localStorage.setItem("apiToken", apiToken);

      setIsAuthenticated(true);
      router.push("/"); // Redirect to the homepage after login
    } catch (error) {
      console.error("Login failed", error);
    }
  };

  const logout = () => {
    localStorage.removeItem("accessToken");
    localStorage.removeItem("apiToken");
    setIsAuthenticated(false);
    router.push("/auth"); // Redirect to the auth page after logout
  };

  return { isAuthenticated, isLoading, login, logout };
};

export default useAuth;
